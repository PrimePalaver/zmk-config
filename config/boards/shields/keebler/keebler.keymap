#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

#define BAS 0
#define NAV 1
#define SYM 2
#define NUM 3

/ {
  keymap {
    compatible = "zmk,keymap";

    default_layer {
      bindings = <
              &kp F                                                                 &kp U
       &kp W  &kp S  &kp P    &kp B                            &kp J       &kp L    &kp E      &kp Y
&kp Q  &kp R  &kp C  &kp T    &kp G                            &kp M       &kp N    &kp COMMA  &kp I    &kp SQT
&kp A  &kp X         &kp D    &kp V                            &kp K       &kp H               &kp DOT  &kp O
&kp Z                &mo NAV  &kp SPACE  &kp TAB    &kp ENTER  &kp RSHIFT  &mo SYM                      &kp SEMI
      >;
    };

    navigation_layer {
      bindings = <
                     &bt BT_SEL 0                                                                 &trans
           &trans    &kp UP     &bt BT_SEL 1   &kp K_VOL_UP                    &trans  &kp HOME   &kp RCTRL  &kp END
&kp ESC    &kp DOWN  &sk LCTRL  &kp RIGHT   &kp K_VOL_DN                    &trans  &kp RSHFT  &trans     &kp RALT  &kp DEL
&kp LEFT   &sk LALT             &sk LSHFT   &kp K_PP                        &trans  &trans                &trans    &kp BSPC
&sk LMETA                       &trans      &trans        &trans    &trans  &trans  &mo NUM                         &kp ENTER
      >;
    };

    symbol_layer {
      bindings = <
                     &kp LBKT                                                                 &kp RBKT
           &kp LBRC  &kp EQUAL  &kp LPAR   &kp TILDE                    &kp CARET  &kp RPAR   &sk RCTRL  &kp RBRC
&kp ESC    &kp STAR  &kp AT     &kp UNDER  &kp DLLR                     &kp HASH   &sk RSHFT  &kp AMPS   &sk RALT   &kp GRAVE
&kp MINUS  &kp PIPE             &kp FSLH   &kp PRCNT                    &trans     &kp BSLH              &kp QMARK  &sk RMETA
&kp PLUS                        &mo NUM    &trans     &trans    &trans  &trans     &trans                           &kp EXCL
      >;
    };

    number_layer {
      bindings = <
                     &kp N3                                                               &kp N8
           &kp N2    &kp LCTRL  &kp N4     &kp N5                     &kp N6   &kp N7     &sk RCTRL  &kp N9
&kp N1     &sk LALT  &kp F3     &sk LSHFT  &kp F11                    &kp F12  &sk RSHFT  &kp F8     &sk RALT  &kp N0
&sk LMETA  &kp F2               &kp F4     &kp F5                     &kp F6   &kp F7          	     &kp F9    &sk RMETA
&kp F1                          &trans     &trans   &trans    &trans  &trans   &trans                          &kp F10
      >;
    };
  };
};
